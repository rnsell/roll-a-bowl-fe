# ============================================================================
# Environment Configuration for Tenant Frontend BFF
# ============================================================================
# Copy this file to .env.local and update values for your environment

# ============================================================================
# API Configuration
# ============================================================================

# Backend Event Directory API URL
# This is the main API server that this BFF proxies to
# Example: http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000

# API Key for the tenant/app
# Used to exchange for Bearer token (tenant-level authentication)
# Obtained from your backend API admin panel
API_KEY=your_api_key_here

# ============================================================================
# GraphQL Code Generation
# ============================================================================

# Backend GraphQL Schema URL for code generation
# This should point to the actual GraphQL endpoint on your backend API
# Used when running: npm run generate
# Example: http://localhost:3000/graphql
# Example: https://api.example.com/graphql
GRAPHQL_SCHEMA_URL=http://localhost:3000/graphql

# ============================================================================
# Session Configuration
# ============================================================================

# Storage backend for sessions: memory, redis, or database
# For development: memory
# For production: redis or database
SESSION_STORAGE=memory

# Session expiry time in milliseconds (1 hour)
SESSION_EXPIRY_MS=3600000

# Session refresh threshold in milliseconds (5 minutes)
# Session will be refreshed if expiry is within this threshold
SESSION_REFRESH_THRESHOLD_MS=300000

# Session cookie name
SESSION_COOKIE_NAME=session_id

# ============================================================================
# Logging
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ============================================================================
# Environment
# ============================================================================

# Node environment: development, production, test
NODE_ENV=development
